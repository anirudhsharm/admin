<% layout('layouts/list') %>
<div class="row">
    <div class="col-md-12">
        <div class="card data-tables">
            <div class="card-header ">
                <div class="row">
                    <div class="col-lg-3 col-sm-6">
                        <div class="card card-stats">
                            <div class="card-body ">
                                <div class="row">
                                    <div class="col-5">
                                        <div class="icon-big text-center icon-warning">
                                            <i class="nc-icon nc-chart text-warning"></i>
                                        </div>
                                    </div>
                                    <div class="col-7">
                                        <div class="numbers">
                                            <p class="card-category">Total Active</p>
                                            <h4 class="card-title"><%- customerActiveCount %></h4>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-sm-6">
                        <div class="card card-stats">
                            <div class="card-body ">
                                <div class="row">
                                    <div class="col-5">
                                        <div class="icon-big text-center icon-warning">
                                            <i class="nc-icon nc-chart text-warning"></i>
                                        </div>
                                    </div>
                                    <div class="col-7">
                                        <div class="numbers">
                                            <p class="card-category">Total Inactive</p>
                                            <h4 class="card-title"><%- customerInactiveCount %></h4>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <% include ../elements/flash.ejs %>
                <a href="<%= admin_url %>customer/add" class="btn btn-wd btn-info btn-outline pull-right">
                    <span class="btn-label">
                        <i class="fa fa fa-plus"></i>
                    </span>
                    Add Customer
                </a>
            </div>
            <div class="card-body table-striped table-no-bordered table-hover dataTable dtr-inline table-full-width">
                <div class="toolbar">
                </div>
                <div class="fresh-datatables">
                    <table id="datatable-customer-list" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th class="nosort">S.No</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Reg Date</th>
                                <th>Status</th>
                                <th class="nosort">Action</th>
                            </tr>
                        </thead>
                        <tbody>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function() {
        App.listCustomerRecords();
    })
</script>