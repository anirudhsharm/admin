<% layout('layouts/list') %>
<div class="row">
    <div class="col-sm-12">
        <div class="btn-group pull-right m-t-15">
            <% if(currentUser.role === 5 || currentUser.role === 4 ) { %>
                <a href="/users/add/cbp" class="btn btn-default dropdown-toggle waves-effect waves-light" style="margin: 5px">Add CBP User
                    <span class="m-l-5"><i class="fa fa-plus"></i></span></a>
            <% } %>
            <% if(currentUser.role === 5) { %>
                <a id="export_cbp" class="btn btn-default dropdown-toggle waves-effect waves-light" style="margin: 5px">Export
                    to Csv <span class="m-l-5"><i class="fa fa-download"></i></span></a>
            <% } %>
        </div>
        <h4 class="page-title">CBP Users Listing</h4>
        <ol class="breadcrumb">
            <li>
                <a href="/">Dashboard</a>
            </li>
            <li class="active">CBP Users List</li>
        </ol>
    </div>
</div>
<div class="row">
    <div class="card-box table-responsive">
        <h4 class="m-t-0 header-title m-b-30"><b>CBP Users Listing</b></h4>
        <div class="row">
            <form method="post" id="cbp_user_filter_form">
                <div class="form-row row">
                    <div class="form-group col-md-9 col-sm-12">
                        <div class="form-group col-md-4 col-sm-12">
                            <label class="col-form-label">Date Range</label>
                            <input id="date_range" readonly class="form-control" name="dates" autocomplete="off"
                                   placeholder="Select Joined Date (Range)" type="text">
                        </div>
                        <div class="form-group col-md-4 col-sm-12">
                            <label for="field-1" class="control-label">User Status</label>
                            <select class="form-control" name="activationType" id="activationType">
                                <option value="" selected>All</option>
                                <option value="active">Active</option>
                                <option value="inactive">Inactive</option>
                            </select>
                        </div>
                        <div class="form-group col-md-4 col-sm-12">
                            <label for="field-1" class="control-label">CBP Type</label>
                            <select class="form-control" name="cbpType" id="cbpType">
                                <option id="all_cbp" value="" selected>All</option>
                                <option value="false">CBP</option>
                                <option value="true">CBP Admin</option>                                
                            </select>
                        </div>
                    </div>
                    <div class="form-group col-md-3 col-sm-12" style="margin-top: 28px">
                        <div class="form-group col-md-5 col-sm-5">
                            <button type="submit" class="btn btn-info pull-left waves-effect waves-light ladda-button"
                                    data-style="slide-left">
                                <span class="ladda-label">Submit</span>
                                <span class="ladda-spinner"></span>
                            </button>
                        </div>
                        <div class="form-group col-md-5 col-sm-5">
                            <a href="/users/cbp" class="btn btn-info pull-left waves-effect waves-light ladda-button"
                               data-style="slide-left">
                                <span class="ladda-label">Clear</span>
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>

        <table id="datatable-cbp-user-list" class="table table-striped table-bordered">
            <thead>
            <tr>
                <th class="nosort">S.No</th>
                <th>Name</th>
                <th>Email</th>
                <th>Reg Date</th>
                <th>Zipcode</th>
                <th>Business Name</th>
                <th>Monthly Limit</th>
                <th>Current Monthly Amount Spent</th>
                <th>Account Balance</th>
                <th>Status</th>
                <th class="nosort">Action</th>
            </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>


