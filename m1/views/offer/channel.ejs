<% layout('layouts/list') %>
<div class="row">
    <div class="col-md-12">
        <div class="card data-tables">
            <div class="card-header ">
                <% include ../elements/flash.ejs %>
                <a href="<%= admin_url %>offer/channel-add" class="btn btn-wd btn-info btn-outline pull-right">
                    <span class="btn-label">
                        <i class="fa fa-plus"></i>
                    </span>
                    Add Partner's Offer
                </a>
                <a href="<%= admin_url %>offer/Partner" class="btn btn-wd btn-info btn-outline pull-right" style = "margin-right: 10px;">
                    <span class="btn-label">
                        <i class="fa fa-user"></i>
                    </span>
                    Partner Manager
                </a>
            </div>
            <div class="card-body table-striped table-no-bordered table-hover dataTable dtr-inline table-full-width">
                <div class="toolbar">
                </div>
                <div class="fresh-datatables">
                    <table id="datatable-channel-offer-list" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th class="nosort">S.No.</th>
                                <th>Coupon</th>
                                <th>Partner</th>
                                <th>Percent</th>
                                <th>Number Of Uses</th>
                                <th>Number Of Used</th>
                                <th>Status</th>
                                <th>Created Date</th>
                                <th class="nosort">Actions</th>
                           </tr>
                        </thead>
                        <tbody>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function() {
        App.listChannelOfferRecords();
    })
</script>